@model WebChoThueThietBiXD.Models.ChiTietPhieuDat

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main_content">
    <div class="form-container">
        <div class="title">
            <a href="~/PhieuDat/Edit/@Model.maPhieuDat"><img src="/images/left.png"></a>
            <h2>Cập nhật thiết bị thuê</h2>
        </div>

        <form asp-action="Edit">
            <div class="form-group hidden">
                <input hidden id="maPhieuDat" name="maPhieuDat" asp-for="maPhieuDat" readonly>
            </div>
            <div class="form-group hidden">
                <input hidden id="maThietBi" name="maThietBi" asp-for="maThietBi" readonly>
            </div>
            <div class="form-group hidden">
                <label for="maChiTietPhieuDat">Mã chi tiết phí đặt:</label>
                <input id="maChiTietPhieuDat" name="maChiTietPhieuDat" asp-for="maChiTietPhieuDat" readonly>
            </div>
            <div class="form-group hidden">
                <label for="tenThietBi">Tên thiết bị:</label>
                <input id="tenThietBi" name="tenThietBi" asp-for="ThietBi.tenThietBi" readonly>
            </div>
            <div class="form-group hidden">
                <label for="giaThueNgay">Giá thuê:</label>
                <input type="number" id="giaThueNgay" name="giaThueNgay" asp-for="giaThueNgay" readonly>
            </div>
            <div class="form-group">
                <label for="soLuongThue">Số lượng thuê:</label>
                <input type="number" id="soLuongThue" name="soLuongThue" asp-for="soLuongThue">
                <span asp-validation-for="soLuongThue" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 20%;">
                <label for="ngayBatDauThue">Ngày bắt đầu thuê:</label>
                <input type="date" id="ngayBatDauThue" name="ngayBatDauThue" asp-for="ngayBatDauThue">
                <span asp-validation-for="ngayBatDauThue" class="text-danger"></span>
            </div>
            <div class="form-group" style="width: 20%;">
                <label for="ngayKetThucThue">Ngày kết thúc thuê:</label>
                <input type="date" id="ngayKetThucThue" name="ngayKetThucThue" asp-for="ngayKetThucThue">
                <span asp-validation-for="ngayKetThucThue" class="text-danger"></span>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn-primary">Lưu lại</button>
                <a class="btn-secondary" href="~/PhieuDat/Edit/@Model.maPhieuDat">Hủy bỏ</a>

            </div>
        </form>
    </div>
</div>

