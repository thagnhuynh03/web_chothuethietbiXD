@model WebChoThueThietBiXD.Models.ChiTietPhieuDat

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main_content">
            <div class="form-container">
                <div class="title">
                <a><img src="/images/left.png"></a>
                    <h2>Thêm thiết bị</h2>
                </div>
                
                <form asp-action="Create">
                    <div class="form-group">
                        <label for="maThietBi">Thiết bị:</label>
                        <select id="maThietBi" name="maThietBi">
                            <option value="">Thiết bị</option>
                            @foreach (var item in ViewBag.maThietBi)
                            {
                                <option value="@item.Value">@item.Value | @item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="maThietBi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="giaThueNgay">Giá thuê</label>
                        <input type="number" id="giaThueNgay" name="giaThueNgay">
                    </div>
                    <div class="form-group">
                        <label for="soLuongThue">Số lượng thuê:</label>
                        <input type="number" id="soLuongThue" name="soLuongThue">
                        <span asp-validation-for="soLuongThue" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width: 20%;">
                        <label for="ngayBatDauThue">Ngày bắt đầu thuê:</label>
                        <input type="date" id="ngayBatDauThue" name="ngayBatDauThue">
                        <span asp-validation-for="ngayBatDauThue" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width: 20%;">
                        <label for="ngayKetThucThue">Ngày kết thúc thuê:</label>
                        <input type="date" id="ngayKetThucThue" name="ngayKetThucThue">
                        <span asp-validation-for="ngayKetThucThue" class="text-danger"></span>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn-primary">Lưu lại</button>
                        <a class="btn-secondary">Hủy bỏ</a>
                        
                    </div>
                </form>
            </div>
        </div>
